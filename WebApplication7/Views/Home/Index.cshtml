@using WebApplication7.Models
@{
    List<DBmanager.Book> books = ViewBag.books;
    ViewBag.Title = "index";
}
@{
    <p>
        <button type="button" class="btn btn-outline-secondary" onclick="location.href='@Url.Action("CreateBook", "Home", "")'">新增資料</button>
    </p>
    <table class="table table-striped table-bordered table-sm">
        <thead>
            <tr>
                <th>Barcode</th>
                <th>Book Name</th>
                <th>Author</th>
                <th>PublishingHouse</th>
                <th>Publication Date</th>
                <th>Price</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (DBmanager.Book book in books)
            {
                <tr>
                    <th style="vertical-align: middle; ">@book.Barcode</th>
                    <th style="vertical-align: middle; ">@book.BookName</th>
                    <th style="vertical-align: middle; ">@book.Author</th>
                    <th style="vertical-align: middle; ">@book.PublishingHouse</th>
                    <th style="vertical-align: middle; ">@book.PublicationDate.ToString("yyyy/MM/dd")</th>
                    <th style="vertical-align: middle; ">@book.Price</th>
                    <th style="text-align: center;">
                        @{ var bookId = book.Barcode; }
                        <button type="button" class="btn btn-outline-secondary" onclick="location.href='@Url.Action("EditBook", "Home", new { id = bookId })'">編輯</button>
                        <button type="button" class="btn btn-outline-secondary" onclick="location.href='@Url.Action("delBook", "Home", new { id = bookId })'">刪除</button>
                    </th>
                </tr>
            }
        </tbody>
    </table>

    <script>
        $(document).ready(function () {
            $('#dtBasicExample').DataTable();
            $('.dataTables_length').addClass('bs-select');
        });

    </script>
}
