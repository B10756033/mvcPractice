
@{
    ViewBag.Title = "CreateBook";
}

<h2>新增 book</h2>
<form method="post" action="/Home/CreateBook">
    <div class="form-group row">
        <label for="inputBarCode" class="col-sm-2">BarCode</label>
        <div class="col-sm-10">
            <input type="text" id="inputBarCode" name="Barcode" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label for="inputBookName" class="col-sm-2">書名</label>
        <div class="col-sm-10">
            <input type="text" id="inputBookName" name="BookName" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label for="inputAut" class="col-sm-2">作者</label>
        <div class="col-sm-10">
            <input type="text" id="inputAut" name="Author" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label for="inputPlsH" class="col-sm-2">出版社</label>
        <div class="col-sm-10">
            <input type="text" id="inputPlsH" name="PublishingHouse" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label for="inputPlsD" class="col-sm-2">出版日期</label>
        <div class="col-sm-10">
            <input type="date" id="inputPlsD" name="PublicationDate" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label for="inputPrice" class="col-sm-2">價格</label>
        <div class="col-sm-10">
            <input type="number" id="inputPrice" name="Price" class="form-control" />
        </div>
    </div>
    <input class="btn btn-default" type="submit" value="新增" />
    <button class="btn btn-default" onclick="window.location.href='@Url.Action("Index")'">返回</button>
</form>

