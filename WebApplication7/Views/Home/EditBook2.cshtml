
@{
    ViewBag.Title = "EditBook";
    
}
@model WebApplication7.Models.DBmanager.Book
<h2>修改 book</h2>
<form method="post" action="/Home/EditBook">
    <div class="form-group row">
        <label for="inputBarCode" class="col-sm-2">BarCode</label>
        <div class="col-sm-10">
            <input type="text" id="inputBarCode" name="Barcode" value="@Model.Barcode" readonly class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label for="inputBookName" class="col-sm-2">書名</label>
        <div class="col-sm-10">
            <input type="text" id="inputBookName" name="BookName" value="@Model.BookName" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label for="inputAut" class="col-sm-2">作者</label>
        <div class="col-sm-10">
            <input type="text" id="inputAut" name="Author" value="@Model.Author" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label for="inputPlsH" class="col-sm-2">出版社</label>
        <div class="col-sm-10">
            <input type="text" id="inputPlsH" name="PublishingHouse" value="@Model.PublishingHouse" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label for="inputPlsD" class="col-sm-2">出版日期</label>
        <div class="col-sm-10">
            <input type="datetime" id="inputPlsD" name="PublicationDate" value="@Model.PublicationDate" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label for="inputPrice" class="col-sm-2">價格</label>
        <div class="col-sm-10">
            <input type="number" id="inputPrice" name="Price" value="@Model.Price" class="form-control" />
        </div>
    </div>
    <input class="btn btn-default" type="submit" value="儲存" />
</form>

